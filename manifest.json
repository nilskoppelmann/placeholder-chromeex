{
    "name": "Placehold.it App",
    "version": "1.0",
    "manifest_version": 2,

    "description": "Great Placeholderservice with GUI",
    "icons": {},
    "browser_action": {
        "default_icon": "img/defaulticon.png",
        "default_popup": "popup.html",
        "default_title": "Placehold.it App"
    },
    "content_scripts": [ {
        "js": [ "js/app/content.js" ],
        "matches": [ "*://*/*" ],
        "run_at": "document_start"
    } ],
    "minimum_chrome_version": "18",
    "permissions": [ "http://*/*", "https://*/*", "unlimitedStorage", "contextMenus", "cookies", "tabs", "notifications" ]
}
